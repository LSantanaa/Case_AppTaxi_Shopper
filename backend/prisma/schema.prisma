datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@db:5432/appTaxi"
}

generator client {
  provider = "prisma-client-js"
}

model TravelsHistory {
  id          Int      @id @default(autoincrement())
  custumer_id Int
  origin      String
  destination String
  distance    Int
  duration    String
  driver_id   Int
  driver_name String
  value       Float
  date        DateTime @default(dbgenerated("CURRENT_TIMESTAMP AT TIME ZONE 'America/Sao_Paulo'"))
}
