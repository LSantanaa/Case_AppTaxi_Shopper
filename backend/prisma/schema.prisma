datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@db:5432/appTaxi"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model TravelsHistory {
  id          Int      @id @default(autoincrement())
  custumer_id String
  origin      String
  destination String
  distance    Int
  duration    String
  driver_id   Int
  driver_name String
  value       Float
  date        DateTime @default(now())
}
